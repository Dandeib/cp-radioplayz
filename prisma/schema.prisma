generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Roles {
  Admin
  Developer
  Content
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String @unique
  password String
  role     Roles
}

model News {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  content String
  image   String?
}

model Wartung {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  wartungsmode Boolean
  password     String
}

model Bewerbungen {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String?
}
